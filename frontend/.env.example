# Frontend Environment Variables
# Copy this to .env and update values

# Backend API URLs
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Feature Flags
NEXT_PUBLIC_ENABLE_METRICS_DASHBOARD=true
NEXT_PUBLIC_ENABLE_CAPTIONS=true
NEXT_PUBLIC_ENABLE_EXPORT=true

# Environment
NEXT_PUBLIC_ENV=development

# Production values (example):
# NEXT_PUBLIC_WS_URL=wss://your-production-url.com
# NEXT_PUBLIC_API_URL=https://your-production-url.com
